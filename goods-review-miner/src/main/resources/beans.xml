<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!--<bean id="properties" class="ru.goodsreview.api.request.builder.RequestBuilder" abstract="true">-->
        <!--<property name="geoIdValue" value="0"/>-->
    <!--</bean>-->
    <bean id="propertiesConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:secure-api.properties</value>
                <!--<value>classpath:local_db.properties</value>-->
                <value>classpath:db.properties</value>
            </list>
        </property>

        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <bean id="contentApiProvider" class="ru.goodsreview.api.provider.ContentAPIProvider" lazy-init="false">
        <property name="apiKey" value="${api-key}"/>
    </bean>

    <import resource="goods-review-db.xml"/>

    <bean id="propertyFile" class="org.springframework.beans.factory.config.PropertiesFactoryBean" lazy-init="false">
        <property name="location" value="classpath:secure-api.properties"/>
    </bean>

    <bean id="secureProperties" class="ru.goodsreview.api.provider.ContentAPIProvider" lazy-init="false">
        <property name="apiKey" value="${api-key}"/>
    </bean>

    <bean id="entityService" class="ru.goodsreview.core.db.entity.EntityService">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="grabberBatch" class="ru.goodsreview.api.grabber.batch.GrabberBatch">
        <property name="entityService" ref="entityService"/>
    </bean>

    <bean id="categoryGrabber" class="ru.goodsreview.api.grabber.CategoryGrabber">
        <property name="contentApiProvider" ref="contentApiProvider"/>
        <property name="grabberBatch" ref="grabberBatch"/>
    </bean>

    <bean id="modelGrabber" class="ru.goodsreview.api.grabber.ModelGrabber">
        <property name="contentApiProvider" ref="contentApiProvider"/>
        <property name="grabberBatch" ref="grabberBatch"/>
    </bean>
</beans>