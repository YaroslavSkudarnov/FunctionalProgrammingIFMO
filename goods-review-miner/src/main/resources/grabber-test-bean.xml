<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="propertiesConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:secure-api.properties</value>
                <!--<value>classpath:local_db.properties</value>-->
                <value>classpath:db.properties</value>
            </list>
        </property>

        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <bean id="contentApiProvider" class="ru.goodsreview.api.provider.ContentAPIProvider" lazy-init="false">
        <property name="apiKey" value="${api-key}"/>
    </bean>

    <!--<bean id="dataSourceLocal" class="org.apache.commons.dbcp.BasicDataSource" lazy-init="false">-->
        <!--<property name="driverClassName" value="com.mysql.jdbc.Driver"/>-->
        <!--<property name="url" value="${url}"/>-->
        <!--<property name="username" value="${username}"/>-->
        <!--<property name="password" value="${password}"/>-->

        <!--<property name="validationQuery" value="select 1"/>-->
    <!--</bean>-->

    <bean id="dataSourceSSH" class="ru.goodsreview.core.util.db.SSHTunnelDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
        <property name="host" value="${host}"/>
        <property name="port" value="${port}"/>
        <property name="sshUsername" value="${ssh.username}"/>
        <property name="sshPassword" value="${ssh.password}"/>
        <property name="tunnelLocalPort" value="${tunnel.local.port}"/>
        <property name="tunnelRemotePort" value="${tunnel.remote.port}"/>
        <property name="tunnelRemoteHost" value="${tunnel.remote.host}"/>
        <property name="validationQuery" value="select 1"/>
    </bean>

    <!--Specifying dataSource here -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <!--<property name="dataSource" ref="dataSourceLocal"/>-->
        <property name="dataSource" ref="dataSourceSSH"/>
    </bean>

    <bean id="entityService" class="ru.goodsreview.core.db.entity.EntityService">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="grabberBatch" class="ru.goodsreview.api.grabber.batch.GrabberBatch">
        <property name="entityService" ref="entityService"/>
    </bean>

    <bean id="categoryGrabber" class="ru.goodsreview.api.grabber.CategoryGrabber">
        <property name="contentApiProvider" ref="contentApiProvider"/>
        <property name="grabberBatch" ref="grabberBatch"/>
    </bean>

    <bean id="modelGrabber" class="ru.goodsreview.api.grabber.ModelGrabber">
        <property name="contentApiProvider" ref="contentApiProvider"/>
        <property name="grabberBatch" ref="grabberBatch"/>
    </bean>

    <bean id="reviewGrabber" class="ru.goodsreview.api.grabber.ReviewGrabber">
        <property name="contentApiProvider" ref="contentApiProvider"/>
        <property name="grabberBatch" ref="grabberBatch"/>
    </bean>
</beans>